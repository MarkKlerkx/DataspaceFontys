				"body": {
					"mode": "raw",
					"raw": "{\n    \"description\": \"Notify QuantumLeap of Streetlight illuminanceLevel changes\",\n    \"subject\": {\n        \"entities\": [\n            {\n                \"idPattern\": \".*\",\n                \"type\": \"Streetlight\"\n            }\n        ],\n        \"condition\": {\n            \"attrs\": [\n                \"illuminanceLevel\"\n            ]\n        }\n    },\n    \"notification\": {\n        \"http\": {\n            \"url\": \"http://quantumleap:8668/v2/notify\"\n        },\n        \"attrs\": [\n            \"illuminanceLevel\"\n        ],\n        \"attrsFormat\": \"normalized\"\n    },\n    \"throttling\": 1\n}"
				},
				"url": {
					"raw": "http://{{orion_host}}:1026/v2/subscriptions",
					"protocol": "http",
					"host": [
						"{{orion_host}}"
					],
					"port": "1026",
					"path": [
						"v2",
						"subscriptions"
					]
				},
				"description": "Maakt het abonnement aan zodat QuantumLeap notificaties ontvangt voor Streetlight.illuminanceLevel wijzigingen."
			},
			"response": []
		}
	],
	"variable": [
