			"id": "40608858-37aa1606-e786-4def-8d4b-f1240beeb242",
			"protocolProfileBehavior": {
				"disableBodyPruning": true
			},
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json",
						"type": "text"
					},
					{
						"key": "Fiware-Service",
						"value": "fiware",
						"type": "text"
					},
					{
						"key": "Fiware-ServicePath",
						"value": "/iot",
						"type": "text"
